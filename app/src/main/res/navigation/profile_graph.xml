<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.pharmacy.ui.screen.profile.ProfileFragment"
        android:label="@string/navigation_profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_adminMenuFragment"
            app:destination="@id/adminMenuFragment" />
        <action
            android:id="@+id/action_profileFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />

    </fragment>

    <fragment
        android:id="@+id/adminProductsFragment"
        android:name="com.pharmacy.ui.screen.admin_products.AdminProductsFragment"
        android:label="AdminProductsFragment"
        tools:layout="@layout/fragment_admin_products">

        <action
            android:id="@+id/action_adminProductsFragment_to_adminProductDetailsFragment"
            app:destination="@id/adminProductDetailsFragment" />

    </fragment>

    <fragment
        android:id="@+id/adminReportsMenuFragment"
        android:name="com.pharmacy.ui.screen.admin_reports_menu.AdminReportsMenuFragment"
        android:label="AdminReportsMenuFragment"
        tools:layout="@layout/fragment_admin_reports_menu">

        <action
            android:id="@+id/action_adminReportsMenuFragment_to_adminReportsUsersFragment"
            app:destination="@id/adminReportsUsersFragment" />
        <action
            android:id="@+id/action_adminReportsMenuFragment_to_adminReportsCategoriesFragment"
            app:destination="@id/adminReportsCategoriesFragment" />
        <action
            android:id="@+id/action_adminReportsMenuFragment_to_adminReportsProductsFragment"
            app:destination="@id/adminReportsProductsFragment" />

    </fragment>

    <fragment
        android:id="@+id/adminReportsUsersFragment"
        android:name="com.pharmacy.ui.screen.admin_reports_users.AdminReportsUsersFragment"
        android:label="AdminReportsUsersFragment"
        tools:layout="@layout/fragment_admin_reports_users" />

    <fragment
        android:id="@+id/adminReportsCategoriesFragment"
        android:name="com.pharmacy.ui.screen.admin_reports_categories.AdminReportsCategoriesFragment"
        android:label="AdminReportsCategoriesFragment"
        tools:layout="@layout/fragment_admin_reports_categories" />

    <fragment
        android:id="@+id/adminReportsProductsFragment"
        android:name="com.pharmacy.ui.screen.admin_reports_products.AdminReportsProductsFragment"
        android:label="AdminReportsProductsFragment"
        tools:layout="@layout/fragment_admin_reports_products" />

    <fragment
        android:id="@+id/adminProductDetailsFragment"
        android:name="com.pharmacy.ui.screen.admin_product_details.AdminProductDetailsFragment"
        android:label="AdminProductDetailsFragment"
        tools:layout="@layout/fragment_admin_product_details">

        <argument
            android:name="product"
            android:defaultValue="@null"
            app:argType="com.pharmacy.ui.model.ProductItem"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/adminMenuFragment"
        android:name="com.pharmacy.ui.screen.admin_menu.AdminMenuFragment"
        android:label="fragment_admin_menu"
        tools:layout="@layout/fragment_admin_menu">

        <action
            android:id="@+id/action_adminMenuFragment_to_adminProductsFragment"
            app:destination="@id/adminProductsFragment" />
        <action
            android:id="@+id/action_adminMenuFragment_to_adminReportsFragment"
            app:destination="@id/adminReportsMenuFragment" />

    </fragment>

    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.pharmacy.ui.screen.orders.OrdersFragment"
        android:label="OrdersFragment"
        tools:layout="@layout/fragment_orders" />

</navigation>